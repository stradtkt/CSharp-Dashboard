@model User

<div class="row">
    <div class="col-md-6">
        <h1 class="text-center">Register</h1>
        <form asp-action="Register" asp-controller="Home" method="POST">
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="first_name"></span>
                </div>
                <label asp-for="first_name"></label>
                <input asp-for="first_name" class="form-control">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="last_name"></span>
                </div>
                <label asp-for="last_name"></label>
                <input asp-for="last_name" class="form-control">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="email"></span>
                </div>
                <label asp-for="email"></label>
                <input asp-for="email" class="form-control">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="password"></span>
                </div>
                <label asp-for="password"></label>
                <input asp-for="password" class="form-control">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="confirm"></span>
                </div>
                <label asp-for="confirm"></label>
                <input asp-for="confirm" class="form-control">
            </div>
            <input type="submit" value="Register" class="btn btn-success">
        </form>
    </div>
    <div class="col-md-6">
        <h1 class="text-center">Login</h1>
        <form asp-action="Login" asp-controller="Home" method="POST">
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="email"></span>
                </div>
                <label asp-for="email"></label>
                <input asp-for="email" class="form-control">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="password"></span>
                </div>
                <label asp-for="password"></label>
                <input asp-for="password" class="form-control">
            </div>
            <input type="submit" value="Login" class="btn btn-primary">
        </form>
    </div>
</div>